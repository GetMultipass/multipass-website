<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title><%= current_page.data.title %></title>
        <meta content="<%= current_page.data.description %>" name="description">
        <meta name="twitter:card" content="summary">
        <meta name="twitter:title" content="<%= current_page.data.title %>">
        <meta name="twitter:description" content="<%= current_page.data.description %>">
        <meta name="twitter:image" content="<%= asset_path :images, 'logo.png' %>">

        <meta property="og:title" content="<%= current_page.data.title %>">
        <meta property="og:type" content="article">
        <meta property="og:image" content="<%= asset_path :images, 'logo.png' %>">
        <meta property="og:description" content="<%= current_page.data.description %>">
        <meta content="#57219C" name="theme-color">

        <%= stylesheet_link_tag "site" %>
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
        <%= javascript_include_tag "site" %>
    </head>
    <body>
        <div class="jumbotron jumbotron-fluid" id="top">
            <div class="container">
                <ul class="nav justify-content-end">
                    <%= nav_item 'Product', '/product.html' %>
                    <%= nav_item 'Security', '/security.html' %>
                    <%= nav_item 'Pricing', '/pricing.html' %>
                    <%= nav_item 'FAQ', '/faq.html' %>
                    <%= nav_item 'About', '/about.html' %>
                </ul>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <a href="/">
                            <%= image_tag "logo.png", width: 520 %>
                        </a>

                        <%= yield_content :page_subtitle %>
                    </div>

                    <div class="col-md-4 d-flex flex-column justify-content-center">
                        <a class="btn btn-primary btn-lg mr-3" href="#">
                            Get Started
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <%= yield %>
    </body>
</html>
